@font-face {
    font-family: 'VerizonApexBook';
    src: url("<%= asset_url 'verizonapex-book-webfont.eot' %>");
    src: url('<%= asset_url "verizonapex-book-webfont.eot" %>?#iefix') format('embedded-opentype'),
    url('<%= asset_url "verizonapex-book-webfont.woff" %>') format('woff'),
    url('<%= asset_url "verizonapex-book-webfont.ttf" %>') format('truetype'),
    url('<%= asset_url "verizonapex-book-webfont.svg" %>#VerizonApexBook') format('svg');
    font-weight: bold;
