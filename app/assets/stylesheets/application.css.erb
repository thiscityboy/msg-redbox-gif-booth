body {
  background-image: url("<%= asset_url 'bg-gradient.jpg' %>");
  background-size: 1280px 800px;
  border-top: 15px solid #268FD4;
}

.home-img {
  position: absolute;
  top: 15px;
  right: 0px;
}

h2 {
  font-family: "museo-slab",serif;
  font-weight: 300;
  font-size: 68px;
  color: #31a8e6;
  text-transform: uppercase;
  margin: 0;
}

p {
  font-family: "museo-sans-rounded",sans-serif;
  color: white;
  font-size: 21px;
  font-weight: 700;
  text-transform: uppercase;
  margin: 0;
}

.btn-verizon, .btn-verizon:hover {
  color: #fff;
  font-family: "museo-sans-rounded",sans-serif;
  font-weight: 700;
  font-size: 1em;
  text-transform: uppercase;
  background-color: #2A96DF;
}

.btn-circle {
  font-size: 45px;
  border-radius: 35px;
}

.verizon-logo {
  width: 125px;
}

.alert {
  display: none;
  margin: 0;
  font-family: 'VerizonApexMedium', sans-serif;
  font-size: 21px;
}