body {
  background-color: #A30A19;
  background-size: 1280px 800px;
  border-top: 15px solid #FFF;
}


.spinner  {
  border-radius: 50%;
  width: 140px;
  height: 140px;
  border: solid 2px white;
  -webkit-animation: spin 5s infinite;  
  animation: spin 5s infinite;     
}

@keyframes spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}


a, a:active, a:hover {
  text-decoration: none;
}

.home-img {
  position: absolute;
  top: 15px;
  right: 0px;
}

.logo {
  padding: 0 0 10px 10px;
}

h2 {
  font-family: 'Abel', sans-serif;
  font-weight: 400;
  font-size: 78px;
  color: #FFF;
  text-transform: uppercase;
  margin: 0;
}

p {
  font-family: "museo-sans-rounded",sans-serif;
  color: white;
  font-size: 21px;
  font-weight: 700;
  text-transform: uppercase;
  margin: 0;
}

.btn-verizon, .btn-verizon:hover {
  color: #A30A19;
  font-family: "museo-sans-rounded",sans-serif;
  font-weight: 700;
  font-size: 1em;
  text-transform: uppercase;
  background-color: #FFF;
}

.btn-circle {
  font-size: 45px;
  border-radius: 35px;
}

.alert {
  display: none;
  margin: 0;
  font-family: "museo-sans-rounded",sans-serif;
  font-size: 21px;
}

.spot1 { left: 7%; top: 40px; -webkit-animation: move 5s infinite;}
.spot2 { left: 27%; top: 40px; -webkit-animation: move2 5s infinite;}
.spotlight {
  position: absolute;
  width: 53px;
  height: 0px;
  border-top: 500px solid rgba(255,255,255,0.15);
  border-left: 40px solid transparent;
  border-bottom: 0px solid #575;
  border-right: 40px solid transparent;  
  background-color: transparent;
  -webkit-transform-origin: 50% 100% 0;
  z-index: 0;
  /*-webkit-transition-timing: ease-in-out;*/
}

 @-webkit-keyframes move {
  0%  { 
    -webkit-transform: rotate(30deg);
  }
  50% {
    -webkit-transform: rotate(-30deg);
  }
  100% {
    -webkit-transform: rotate(30deg);
  }
}

 @-webkit-keyframes move2 {
  0%  { 
    -webkit-transform: rotate(-30deg);
  }
  50% {
    -webkit-transform: rotate(30deg);
  }
  100% {
    -webkit-transform: rotate(-30deg);
  }
}


